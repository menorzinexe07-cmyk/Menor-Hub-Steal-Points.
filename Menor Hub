-- --- HUB ---
local function LoadHub()
    ScreenGui:Destroy()
    local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
    local Window = Rayfield:CreateWindow({Name = "Menor Hub | Steal Points", LoadingTitle = "STEAL POINTS V54", LoadingSubtitle = "by GabrielYTFFH4X"})

    local Combate = Window:CreateTab("Combate ‚öîÔ∏è")
    local PlayerTab = Window:CreateTab("Plays üöÄ")
    local Creditos = Window:CreateTab("Cr√©ditos üëë")

    Combate:CreateToggle({Name = "Hitbox Gigante üéØ", CurrentValue = false, Callback = function(v) Flags.Hitbox = v end})
    Combate:CreateSlider({Name = "Tamanho Hitbox", Range = {2, 1000}, Increment = 1, CurrentValue = 300, Callback = function(v) Flags.HitboxSize = v end})
    Combate:CreateToggle({Name = "Auto Clicker", CurrentValue = false, Callback = function(v) Flags.AutoClicker = v end})
    Combate:CreateToggle({Name = "Auto Mensagem Kill", CurrentValue = false, Callback = function(v) Flags.AutoMsgKill = v end})

    PlayerTab:CreateToggle({Name = "Ghost Mode (IMORTAL) üëª", CurrentValue = false, Callback = function(v)
        Flags.Ghost = v
        local char = LocalPlayer.Character
        if v and char then
            char.Archivable = true
            Clone = char:Clone()
            Clone.Parent = workspace
            for _, x in pairs(Clone:GetDescendants()) do 
                if x:IsA("BasePart") then x.Transparency = 0.5 x.CanCollide = false end 
            end
            
            -- Move o corpo real e desativa a hitbox dele
            char.HumanoidRootPart.Anchored = true
            char.HumanoidRootPart.Size = Vector3.new(1,1,1) -- Reseta o tamanho pra n√£o ficar gigante
            char.HumanoidRootPart.CFrame = CFrame.new(char.HumanoidRootPart.Position.X, -30, char.HumanoidRootPart.Position.Z)
            Camera.CameraSubject = Clone.Humanoid
        elseif Clone then
            local lastPos = Clone.HumanoidRootPart.CFrame
            LocalPlayer.Character.HumanoidRootPart.Anchored = false
            LocalPlayer.Character:PivotTo(lastPos)
            Clone:Destroy()
            Clone = nil
            Camera.CameraSubject = LocalPlayer.Character.Humanoid
        end
    end})

    PlayerTab:CreateButton({Name = "MODO AMOEBA (ANTI-LAG TOTAL)", Callback = function() AntiLagSteal() end})

    Creditos:CreateLabel("Dono: GabrielYTFFH4X")
    Creditos:CreateButton({Name = "Copiar Discord", Callback = function() setclipboard(DISCORD_LINK) end})
end

-- --- LOOPS ---
RunService.RenderStepped:Connect(function()
    local char = LocalPlayer.Character
    if not char then return end

    if Flags.AutoClicker then
        local t = char:FindFirstChildOfClass("Tool")
        if t then t:Activate() end
    end

    -- Hitbox Loop (S√≥ afeta os OUTROS)
    if Flags.Hitbox then
        for _, p in pairs(Players:GetPlayers()) do
            -- O segredo est√° aqui: p ~= LocalPlayer garante que seu corpo real n√£o cres√ßa
            if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                local hrp = p.Character.HumanoidRootPart
                hrp.Size = Vector3.new(Flags.HitboxSize, Flags.HitboxSize, Flags.HitboxSize)
                hrp.CanCollide = false; hrp.Transparency = 0.8
            end
        end
    end

    -- Movimento do Fantasma
    if Flags.Ghost and Clone and char:FindFirstChild("Humanoid") then
        Clone.Humanoid:Move(char.Humanoid.MoveDirection, false)
        Clone.HumanoidRootPart.CFrame = CFrame.new(Clone.HumanoidRootPart.Position, Clone.HumanoidRootPart.Position + Vector3.new(Camera.CFrame.LookVector.X, 0, Camera.CFrame.LookVector.Z))
    end
end)

-- Kill Monitor
Players.PlayerAdded:Connect(function(p)
    p.CharacterAdded:Connect(function(c)
        c:WaitForChild("Humanoid").Died:Connect(function()
            if Flags.AutoMsgKill then
                local m = FrasesKill[math.random(1, #FrasesKill)]
                if game:GetService("TextChatService").ChatVersion == Enum.ChatVersion.TextChatService then
                    game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(m)
                else ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(m, "All") end
            end
        end)
    end)
end)

KBtn.MouseButton1Click:Connect(function() if KInput.Text == SENHA_CORRETA then LoadHub() end end)
if LocalPlayer.Name == USER_VIP then LoadHub() end
